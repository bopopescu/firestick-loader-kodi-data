<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol></defaultcontrol>
    <controls>
        <control type="group" id="0">
            <control type="label" id="10">
                <left>45</left>
                <top>15</top>
                <width>1770</width>
                <height>100</height>
                <label></label>
                <font>Font-Condensed-S30-B</font>
            </control>
            <control type="label" id="11">
                <left>45</left>
                <top>45</top>
                <width>1770</width>
                <height>100</height>
                <label></label>
                <font>Font-Condensed-S30</font>
            </control>
            <control type="label" id="12">
                <left>45</left>
                <top>75</top>
                <width>1770</width>
                <height>100</height>
                <label></label>
                <font>Font-Condensed-S30</font>
            </control>
        </control>
        <control type="button" id="1">
            <description>Jump to time</description>
            <visible>!String.IsEmpty(Player.SeekNumeric)</visible>
            <posx>45</posx>
            <posy>0</posy>
            <width>305</width>
            <height>194</height>
            <label>$INFO[Player.SeekNumeric(hh:mm:ss)]</label>
            <font>Font-Condensed-S34</font>
            <disabledcolor>aawhite</disabledcolor>
            <texturefocus></texturefocus>
            <texturenofocus border="20,90,20,90">overlays/volume/back-vf.png</texturenofocus>
            <align>center</align>
            <enable>false</enable>
            <animation condition="[Player.ShowInfo | Window.IsVisible(fullscreeninfo)] + [!Window.IsActive(videoosd) + !Window.IsActive(musicosd)]" easing="inout" effect="slide" end="265,0" start="0,0" time="300" tween="cubic">Conditional</animation>
        </control>
        <control type="button" id="2">
            <description>Jump to channel number</description>
            <visible>!String.IsEmpty(PVR.ChannelNumberInput)</visible>
            <posx>45</posx>
            <posy>0</posy>
            <width>305</width>
            <height>194</height>
            <label>$INFO[PVR.ChannelNumberInput]</label>
            <font>Font-Condensed-S34</font>
            <disabledcolor>aawhite</disabledcolor>
            <texturefocus></texturefocus>
            <texturenofocus border="20,90,20,90">overlays/volume/back-vf.png</texturenofocus>
            <align>center</align>
            <enable>false</enable>
            <animation condition="[Player.ShowInfo | Window.IsVisible(fullscreeninfo)] + [!Window.IsActive(videoosd) + !Window.IsActive(musicosd)]" easing="inout" effect="slide" end="265,0" start="0,0" time="300" tween="cubic">Conditional</animation>
        </control>
    </controls>
</window>